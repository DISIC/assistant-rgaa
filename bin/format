#!/usr/bin/env node
const path = require('path');
const program = require('commander');
const formatInstructions = require('./formatInstructions');



/**
 *
 */
program
	.command('instructions-3-2016')
	.description('Transform a flat v3-2016 instructions JSON file to the correct instructions format.')
	.option(
		'-s, --source <source>',
		'Source URL.'
	)
	.option(
		'-d, --dest <dest>',
		'Destination file.',
		path.resolve(__dirname, '../data/instructions/3-2016.json')
	)
	.action((options) => {
		if (!options.source) {
			console.log('Error: source option required');
			return false;
		}
		return formatInstructions(options);
	});

/**
 *
 */
program.parse(process.argv);
